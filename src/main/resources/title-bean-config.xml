<beans xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <bean id="bookTitle" class="com.springo.beans.Title">
        <property name="name" value="Harry pooter"/>
        <property name="subName" value="the rise of pooter"/>
    </bean>
    <bean id="chapter1Title" class="com.springo.beans.Title">
        <property name="name" value="chapter 1"/>
        <property name="subName" value="the black room"/>
    </bean>
    <bean id="chapter2Title" class="com.springo.beans.Title">
        <property name="name" value="chapter 2"/>
        <property name="subName" value="the light moon"/>
    </bean>
</beans>